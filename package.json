{
  "name": "cloudflare-ddns",
  "version": "2.0.0",
  "description": "App to use Cloudflare as DDNS",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sineverba/docker-cloudflare-ddns.git"
  },
  "scripts": {
    "start": "npx tsx src/index.ts",
    "build": "tsc",
    "postbuild": "cp package*.json dist && cd dist && npm install --omit=dev --ignore-scripts",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "tslint -p tsconfig.json",
    "prettier": "prettier -c \"src/**/*.ts\"",
    "fixprettier": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "author": "alessandro.arici@gmail.com",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "@sineverba/getboolean": "^1.0.0",
    "cloudflare": "^3.0.0",
    "dotenv-flow": "^4.1.0",
    "public-ip": "^6.0.2",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.3",
    "@vitest/coverage-v8": "^1.4.0",
    "coveralls": "^3.1.1",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "msw": "^2.2.13",
    "npm-check-updates": "^16.14.18",
    "prettier": "^3.2.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  }
}
